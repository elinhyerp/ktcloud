<style>
body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  max-width: 840px;
  margin: 24px auto;
  padding: 0 20px;
  background-color: #f9f9f9;
  color: #333;
  line-height: 1.6;
}

a { 
  color: #ffffff; 
  text-decoration: none;
}

hr {
  margin: 24px 0;
  border: 0;
  border-top: 1px solid #ddd;
}

button {
  background-color: #1e90ff;
  color: white;
  border: none;
  min-width: 72px;
  padding: 8px 12px;
  border-radius: 4px;
  font-weight: bold;
  cursor: pointer;
}
button:hover { 
  background-color: #0c7cd5; 
}

.button-container {
  text-align: right;
}

.delete-button {
  background-color: #ff4d4f;
}
.delete-button:hover {
  background-color: #d9363e;
}

input[type='text'], 
textarea {
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
  width: 100%;
  margin-bottom: 12px;
}

.post-detail {
  background: #fff;
  padding: 8px 16px;
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.05);
}
.post-meta {
  font-size: 12px;
  color: #777;
  margin-bottom: 16px;
}
.post-content {
  white-space: pre-wrap;
  line-height: 1.5;
  margin-bottom: 12px;
}

.comment-list {
  margin-top: 12px;
  margin-bottom: 16px;
  padding: 0;
}
.comment-row {
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #eee;
  gap: 6px;
  padding: 8px;
  border-radius: 4px;
  background: #ffffff; 
}
.comment-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
}
.comment-author {
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.comment-date {
  font-size: 12px;
  color: #9aa0a6;
  flex-shrink: 0;
  margin-left: 12px;
  white-space: nowrap;
}
.comment-content {
  line-height: 1.5;
  word-break: break-word;
}
.no-comment {
  text-align: center;
  color: #9aa0a6;
  padding: 16px 0;
  background: #ffffff; 
}

.back-button {
  background: #6c757d;
}
.back-button:hover {
  background: #5a6268;
}
</style>

<div class='post-detail'>
  <h1 style='margin-block: 10px;'>{{post.title}}</h1>
  <div class='post-meta'>
    작성: {{post.createdAt}}
    <br />
    수정: {{post.updatedAt}}
  </div>
  <div class='post-content'>{{post.content}}</div>
  <form method='POST' action='/posts/{{post.id}}/delete' onsubmit='return confirm("삭제하시겠습니까?")' class='button-container' style='margin-bottom: 8px;'>
    <button type='submit' class='delete-button'>삭제</button>
  </form>
</div>

<hr/>

<h2>수정</h2>
<form method='POST' action='/posts/{{post.id}}'>
  <input type='text' name='title' value='{{post.title}}' required>
  <textarea name='content' rows='10' required>{{post.content}}</textarea>
  <div class='button-container'>
    <button type='submit'>저장</button>
  </div>
</form>

<hr/>

<h2>댓글</h2>
<div class='comment-list'>
  {{#each post.comments}}
    <div class='comment-row'>
      <div class='comment-meta'>
        <div class='comment-author'>{{#if this.authorName}}{{this.authorName}}{{else}}익명{{/if}}</div>
        <div class='comment-date'>{{this.createdAt}}</div>
      </div>
      <div class='comment-content'>{{this.content}}</div>
      <form method='POST' action='/posts/{{../post.id}}/comments/{{@index}}/delete' class='button-container' style='margin-bottom: 4px;'>
        <button type='submit' class='delete-button'>삭제</button>
      </form>
    </div>
  {{/each}}
  {{#unless post.comments.length}}
    <div class='no-comment'>
      댓글이 없습니다.
    </div>
  {{/unless}}
  </div>
  
<form method='POST' action='/posts/{{post.id}}/comments'>
  <input type='text' name='authorName' placeholder='닉네임(옵션)'>
  <input type='text' name='content' placeholder='댓글 내용' required>
  <div class='button-container'>
    <button type='submit'>등록</button>
  </div>
</form>
  
<button class='back-button'><a href='/posts'>← 리스트 페이지로</a></button>