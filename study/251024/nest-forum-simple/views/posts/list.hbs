<style>
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    max-width: 840px;
    margin: 24px auto;
    padding: 0 20px;
    background-color: #f9f9f9;
    color: #333;
    line-height: 1.6;
  }

  a {
    color: #000000;
    text-decoration: none;
  }

  hr {
    margin: 24px 0;
    border: 0;
    border-top: 1px solid #ddd;
  }

  button {
    background-color: #1e90ff;
    color: white;
    border: none;
    min-width: 72px;
    padding: 8px 12px;
    border-radius: 4px;
    font-weight: bold;
    cursor: pointer;
  }
  button:hover {
    background-color: #0c7cd5;
  }

  .button-container {
    text-align: right;
  }

  .clear-button {
    background: #6c757d;
  }
  .clear-button:hover {
    background: #5a6268;
  }

  input[type='text'],
  textarea {
    padding: 8px;
    border: 1px solid #ccc;
    border-radius: 4px;
    width: 100%;
    margin-bottom: 12px;
  }

  .search-form {
    display: flex;
    gap: 8px;
    align-items: center;
  }
  .search-form input {
    margin: 0;
  }

  table {
    width: 100%;
    table-layout: fixed;
    margin-bottom: 24px;
    background-color: #ffffff;
    border-radius: 8px;
    border-collapse: collapse;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
  th {
    background-color: #f9fafb;
    font-weight: bold;
    padding: 16px 20px;
    text-align: left;
    border-bottom: 1px solid #e0e0e0;
  }
  td {
    padding: 16px 20px;
    border-bottom: 1px solid #e0e0e0;
    vertical-align: middle;
  }
  .title {
    display: block;
    word-wrap: break-word;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .row-link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
  }
  tr:hover td {
    background-color: #f1f5f9;
  }
  tbody tr td[colspan] {
    text-align: center;
    color: #9aa0a6;
    padding: 16px 0;
    background-color: #f9fafb;
  }

  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
  }
  .page-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    cursor: pointer;
  }
  .page-button:hover {
    background: #d5d5d5;
    transform: scale(1.2);
  }
</style>

<h1>게시판</h1>

<form method='GET' action='/posts' class='search-form'>
  <input
    type='text'
    name='search'
    value='{{search}}'
    placeholder='검색(제목)'
  />
  <button type='submit'>검색</button>
  <a href='/posts'><button
      type='button'
      class='clear-button'
    >초기화</button></a>
</form>

<table>
  <thead>
    <tr>
      <th style='width: 60%;'>제목</th>
      <th style='width: 40%;'>작성일</th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
      <tr>
        <td>
          <a href='/posts/{{this._id}}' class='row-link'>
            <span class='title'>{{this.title}}</span></a>
        </td>
        <td>
          <a
            href='/posts/{{this._id}}'
            class='row-link'
            style='font-size: 12px; color: #9aa0a6;'
          >{{this.createdAt}}</a>
        </td>
      </tr>
    {{/each}}
    {{#unless data.length}}
      <tr>
        <td colspan='2'>게시글이 없습니다.</td>
      </tr>
    {{/unless}}
  </tbody>
</table>

<div class='pagination'>
  {{#if (gt page 1)}}
    <a
      href='/posts?page={{dec page}}&limit={{limit}}'
      class='page-button'
    >&lt;</a>
  {{/if}}
  <span class='page-info'>{{page}} / {{totalPages}}</span>
  {{#if (lt page totalPages)}}
    <a
      href='/posts?page={{inc page}}&limit={{limit}}'
      class='page-button'
    >&gt;</a>
  {{/if}}
</div>

<hr />

<h2>새 글 작성</h2>
<form method='POST' action='/posts'>
  <input type='text' name='title' placeholder='제목' required maxlength='100' />
  <textarea name='content' placeholder='내용' rows='10' required></textarea>
  <div class='button-container'>
    <button type='submit'>등록</button>
  </div>
</form>